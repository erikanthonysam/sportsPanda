<p id="notice"><%= notice %></p>

<p>
  <b>Game:</b>
  <%= @game.name %>
</p>

<p>
  <b>Sport:</b>
  <%= @game.sport %>
</p>

<p>
  <b>Date/Time:</b>
  <%= @game.date.strftime("%I:%M %P %Z - %a %b %d") %>
</p>

<p>
	<b>Sports Bars showing <%= @game.name %></b>
	<table id="profile_bars">
	<tr>
		<th>Bar</th>
		<th>Address</th>
		<th>Phone</th>
		<th>Website</th>
	</tr>
	<% @game.line_items.each do |item|%>
	<tr>
		<td><%= link_to item.user.name, :controller => "users", :action => "show", :id => item.user %></td>
		<td><%= item.user.street %>, <%= item.user.city %>, <%= item.user.state %>, <%= item.user.zip %></td>
		<td><%= item.user.phone %></td>
		<td><%= item.user.website %></td>
		
	</tr>
	<% end %>
	</table>
			
</p>
<% if signed_in? && current_user.admin? %>
<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
<% end %>