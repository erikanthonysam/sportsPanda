<h1>Sports Bars</h1>

<table id="sportsbars_table">
  <tr>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sportsbars.each do |sportsbar| %>
  <tr>
    <td><%= link_to sportsbar.name, sportsbar %></td>
    <td><%= sportsbar.street %></td>
    <td><%= sportsbar.city %></td>
    <td><%= sportsbar.state %></td>
    <td><%= sportsbar.zip %></td>
    <td><%= sportsbar.email %></td>
    <td><%= sportsbar.phone %></td>
    <td><%= sportsbar.website %></td>
	<% if signed_in? && current_user.admin? %>
    <td><%= link_to 'Show', sportsbar %></td>
    <td><%= link_to 'Edit', edit_sportsbar_path(sportsbar) %></td>
    <td><%= button_to 'Destroy', sportsbar, :confirm => 'Are you sure?', :method => :delete%></td>
	<% end %>
  </tr>
<% end %>
</table>

<br>
<% if signed_in? && current_user.admin? %>
<%= link_to 'New Sportsbar', new_sportsbar_path %>
<br />
<% end %>